@model IEnumerable<BookExchangePlatform.Models.ViewModels.ExchangeRequestViewModel>

@{
    ViewData["Title"] = "Requests";
}

@section title {
    <h3>Exchange Requests</h3>
    <hr />
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequesterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Terms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequesterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Terms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestDate.Date)
                </td>
                <td>
                    <ul>
                        @if (item.Status == "Pending" && item.OwnerId == UserManager.GetUserId(User))
                        {
                            <li><a asp-action="Accept" asp-route-id="@item.ExchangeRequestId">Accept</a></li>
                            <li><a asp-action="Reject" asp-route-id="@item.ExchangeRequestId">Reject</a></li>
                        }
                        else
                        {
                            <li><a asp-action="Delete" asp-route-id="@item.ExchangeRequestId">Delete</a></li>
                        }
                    </ul>
                </td>
            </tr>
}
    </tbody>
</table>
